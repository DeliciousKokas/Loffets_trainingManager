<%= render "users/shared/error_messages", resource: resource %>
<div class="container-fluid p-3">
  <div class="row">
    <div class="mx-auto p-3 col-md-7">
      <div class="card p-2">
        <h2 class="text-center">Sign up</h2>

        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>

          <div class="form-group m-3">
            <%= f.label :email %><br />
            <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Enter email", class: 'form-control', required:true %>
          </div>

          <div class="form-group m-3">
            <%= f.label :nickname %><br />
            <%= f.text_field :name, autofocus: true, autocomplete: "name", placeholder: "Enter nicname", class: 'form-control', required:true %>
          </div>

          <div class="form-group m-3">
            <%= f.label :password %>
            <% if @minimum_password_length %>
            <em>(<%= @minimum_password_length %> characters minimum)</em>
            <% end %><br />
            <%= f.password_field :password, autocomplete: "new-password", placeholder: "Enter Password", class: 'form-control', required:true %>
          </div>

          <div class="form-group m-3">
            <%= f.label :password_confirmation %><br />
            <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "Enter Password", class: 'form-control', required:true %>
          </div>

          <div class="form-group m-3 mt-5">
            <%= f.submit "Sign up", class: "btn btn-warning form-control" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
<div class="container text-center">
  <h2>Edit <%= resource_name.to_s.humanize %></h2>

  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="form-group">

    <h3><%= @user.name %></h3>
    <% if @user.image.url %>
      <%= image_tag @user.image.url, class: "m-3 rounded-circle" %></td>
    <% end %>
    
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>

      <div class="form-group col">
        <%= f.file_field :image %><br>
      </div>

      <div class="form-group col row justify-content-center">
        <%= f.label :description, class: 'col-form-label col-md-2' %>
        <div class="col-md-8">
          <%= f.text_area :description, class: 'form-control'%>
        </div>
      </div>

      <div class="form-group col row justify-content-center">
        <%= f.label :email, class: 'col-form-label col-md-2' %>
        <div class="col-md-8">
          <%= f.email_field :email, class: 'form-control', autofocus: true, autocomplete: "email" %>
        </div>
      </div>

      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
      <% end %>

      <div class="form-group col row justify-content-center">
        <%= f.label :password, class: 'col-form-label col-md-2' %>
        <div class="col-md-8">
          <%= f.password_field :password, class: 'form-control', autocomplete: "new-password", placeholder: "パスワード変更時のみ入力してください" %>
        </div>
      </div>

      <div class="form-group col row justify-content-center">
        <%= f.label :password_confirmation, class: 'col-form-label col-md-2' %>
        <div class="col-md-8">
          <%= f.password_field :password_confirmation, class: 'form-control', autocomplete: "new-password", placeholder: "パスワード変更時のみ入力してください" %>
        </div>
      </div>

      <div class="form-group col row justify-content-center">
        <%= f.label :current_password, class: 'col-form-label col-md-2' %>
        <div class="col-md-8">
          <%= f.password_field :current_password, class: 'form-control', autocomplete: "current-password" %>
        </div>
      </div>

      <div class="actions col">
        <%= f.submit "更新", class: 'btn btn-warning form-control col-md-9' %>
      </div>
    <% end %>
  </div>

  <div class="mt-5 pt-4 border-top" style="margin-top:35px">
    <div class="p-3">
      <h3>ユーザー情報を削除したい場合</h3>
    </div>
    <div class="actions col">
      <%= button_to "アカウント削除", registration_path(resource_name), class: 'btn btn-warning form-control col-md-9', data: { confirm: "Are you sure?" }, method: :delete %>
    </div>
  </div>
</div>
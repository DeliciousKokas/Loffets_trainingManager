<%= render "users/shared/error_messages", resource: resource %>
<div class="container-fluid p-3">
  <div class="row">
    <div class="mx-auto p-3 col-md-7">
      <div class="card p-2">
      <div class="form-group m-3 text-center">
          <h2>Edit <%= resource_name.to_s.humanize %></h2>
        </div>

        <div>
          <div class="form-group m-3 text-center">
            <h3><%= @user.name %></h3>
            <% if @user.image.url %>
              <%= image_tag @user.image.url, class: "m-3 rounded-circle" %></td>
            <% end %>
          </div>
          
          <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>

            <div class="form-group m-3 text-center">
              <%= f.file_field :image %><br>
            </div>

            <div class="form-group m-3">
              <%= f.label :description %>
                <%= f.text_area :description, class: 'form-control', autocomplete: "email"%>
            </div>

            <div class="form-group m-3">
              <%= f.label :email %>
              <%= f.email_field :email, class: 'form-control', autocomplete: "email" %>
            </div>

            <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
              <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
            <% end %>

            <div class="form-group m-3">
              <%= f.label :current_password %>
              <%= f.password_field :current_password, class: 'form-control', autocomplete: "current-password", required:true %>
            </div>

            <% if current_user.email == "sample_user@loffets.com" %>
              <div class="form-group m-3">
                New
                <%= f.label :password %>
                <%= f.password_field :password, class: 'form-control', autocomplete: "new-password", placeholder: "Sample user can't change password", disabled: true %>
              </div>

              <div class="form-group m-3">
                New
                <%= f.label :password_confirmation %>
                <%= f.password_field :password_confirmation, class: 'form-control', autocomplete: "new-password", placeholder: "Sample user can't change password", disabled: true %>
              </div>
            <% else %>
              <div class="form-group m-3">
                New
                <%= f.label :password %>
                <%= f.password_field :password, class: 'form-control', autocomplete: "new-password", placeholder: "Please enter only when changing password" %>
              </div>

              <div class="form-group m-3">
                New
                <%= f.label :password_confirmation %>
                <%= f.password_field :password_confirmation, class: 'form-control', autocomplete: "new-password", placeholder: "Please enter only when changing password" %>
              </div>

            <% end %>
              <div class="form-group m-3 mt-5">
                <%= f.submit "Update", class: 'btn btn-warning form-control' %>
              </div>
          <% end %>
        </div>

        <% if current_user.email =! "sample_user@loffets.com" %>
          <div class="mt-4 pt-4 border-top" style="margin-top:35px">
            <div class="form-group m-3">
              <%= button_to "Delete account", registration_path(resource_name), class: 'btn btn-danger form-control', data: { confirm: "Are you sure?" }, method: :delete %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
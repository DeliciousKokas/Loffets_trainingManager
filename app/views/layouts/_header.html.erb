<header style="margin-bottom:20px">
  <div class="container-fluid">
    <nav class="navbar navbar-expand-sm bg-dark navbar-dark fixed-top">
      <%= link_to image_tag("dumbel.png", width: '36') + " Loffets", root_path, class: "navbar-brand", align: "middle"%>
      <ul class="navbar-nav mr-auto">
        <li class="nav-item">
          <%= link_to "About", "#", class: "nav-link" %>
        </li>
        <li class="nav-item">
          <%= link_to "Test", "#", class: "nav-link" %>
        </li>
      </ul>

      <% if user_signed_in? %>
      <ul class="navbar-nav mr-auto">
        <%= form_tag(users_list_path, method: "get", class: "form-inline") do %>
          <li class="nav-item">
            <%= text_field_tag :search, '', class: 'form-control mr-sm-2', placeholder: "ユーザーを検索" %>
          </li>
          <li class="nav-item">
            <%= submit_tag 'Search', name: nil, class:"btn btn-outline-warning my-2 my-sm-0" %>
          </li>
        <% end %>
      </ul>
      <ul class="navbar-nav">
        <li class="nav-item dropdown">
          <%= link_to (render 'shared/img_thumb'), "#", class: "active nav-link dropdown-toggle", data: {toggle:"dropdown"}, aria: {haspopup:"true", expanded:"false"} %>
          <div class="dropdown-menu dropdown-menu-right py-1">
            <%= link_to "Main", main_path, class: "dropdown-item" %>
            <%= link_to "Feed", feed_path, class: "dropdown-item" %>
            <%= link_to "Chart", chart_path, class: "dropdown-item" %>
            <%= link_to "Profile", edit_user_registration_path, class: "dropdown-item" %>
          <div class="dropdown-divider my-1"></div>
            <%= link_to "SignOut", destroy_user_session_path, class: "dropdown-item", method: :delete %>
          </div>
        </li>
      </ul>

      <% else %>
      <ul class="navbar-nav">
        <li class="nav-item">
          <%= link_to "SignIn", new_user_session_path, class: "active nav-link" %>
        </li>
        <li class="nav-item">
          <%= link_to "SignUp", new_user_registration_path, class: "active nav-link" %>
        </li>
      </ul>
      <% end %>

    </nav>
  </div>
</header>
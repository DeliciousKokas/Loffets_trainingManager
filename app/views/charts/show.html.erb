              <%= @mywork_30days.first[0] %>
            <% end %>
          </div>
        </div>
      </div>
      <div class="col-lg-8 py-2">
        <%= pie_chart @mywork_30days %>
      </div>
    </div>

    <h4 class="text-center pb-3">Volumes by training</h4>
    <% if @chart %>
      <%= column_chart @chart %>
    <% end %> 

    <%= form_tag("/chart", method: "get", class: "input-group p-3" ) do %>
      <%= select_tag(:mywork_id, options_from_collection_for_select(@myworks, :id, :name), class: 'form-control') %>

      <div class="input-group-append">
        <%= submit_tag "Search", class: "btn btn-warning" %>
      </div>
    <% end %>

  </div>

<div class="justify-content-center p-3">
  <div class="p-2 mx-auto col-lg-7">
    <div class="card mx-auto" style="padding:10px; margin-bottom:20px">
      <table class="table">
        <div class="m-3 text-center">
          <h2>Mywork</h2>
        </div>
        <tr>
          <th>Name</th>
          <th>Description</th>
        </tr>
        <% @myworks.each do |myworks| %>
          <tr>
            <td><%= myworks.name %></td>
            <td><%= myworks.description %></td>
          </tr>
        <% end %>
      </table>
    </div>
    <div>
      <%= form_for(:mywork, url:myworks_path) do |f| %>
        <div class="form-group justify-content-around">
          <%= f.hidden_field :user_id, value: current_user.id %>

          <div class="form-group">
            <%= f.text_field :name, class: 'form-control', placeholder: "Title", required: true %>
          </div>
      
          <div class="form-group">
            <%= f.text_area :description, class: 'form-control', placeholder: "Description"  %>
          </div>
      
          <div class="actions">
            <%= f.submit "Add", class: "btn btn-warning form-control" %>
          </div>

        </div>
      <% end %>
    </div>
  </div>
</div>
<div class="justify-content-center">
  <div class="p-2 mx-auto col-lg-7">
    <%= render partial: 'shared/record_card', locals:{record: @record} %>

    <div>
      <%= form_for(:workout, url:events_path) do |f| %>
        <div class="form-group row">
          <%= f.hidden_field :record_id, value: @record.id %>

          <div class="form-group col">
            <%= f.select :mywork_id, options_from_collection_for_select(@myworks, :id, :name), class: 'form-control' %>
          </div>

          <div class="form-group col">
            <%= f.text_field :set, class: 'form-control', placeholder: "Set"  %>
          </div>
          
          <div class="form-group col">
            <%= f.text_field :rep, class: 'form-control', placeholder: "Rep"  %>
          </div>

          <div class="form-group col">
            <%= f.text_field :weight, class: 'form-control', placeholder: "Weight"  %>
          </div>

          <div class="actions col">
            <%= f.submit "Add", class: "btn btn-info" %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
<div>
  <div>
    <%= month_calendar events: @records do |date, records| %>
      <%= date.day %>

      <% records.each do |record| %>
        <div>
          <%= link_to record.title, events_path(start_time: record.start_time), class: "btn btn-info" %> 
        </div>
      <% end %>
    <% end %>
  </div>
  <div>
    <%= form_for(@new_record, url:main_path) do |f| %>
      <div class="form-group">
        <%= f.hidden_field :user_id %>
              
        <div class="form-group col">
          <%= f.date_field :start_time, class: 'form-control', placeholder: "Start_time"  %>
        </div>

        <div class="form-group col">
          <%= f.text_field :title, class: 'form-control', placeholder: "Title" %>
        </div>
    
        <div class="form-group col">
          <%= f.text_field :description, class: 'form-control', placeholder: "Description"  %>
        </div>

        <div class="actions col">
          <%= f.submit "Add", class: "btn btn-info" %>
        </div>
      </div>
    <% end %>
  </div>
</div>
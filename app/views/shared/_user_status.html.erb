<div class="card mx-3 p-3">
  <div class="card-columns d-flex justify-content-start p-1">
    <%= image_tag current_user.image.url, class: "rounded-circle", size: "96" %>
    <div class="align-self-center ml-4 p-1">
      <h4><%= current_user.name %></h4>
      <h6><%= current_user.record.count %> records</h6>
    </div>
  </div>
  <div class="p-1">
    <%= render 'shared/stats' %>
  </div>
  <div class="p-1 border-top">
    <% if current_user.description %>
      <%= current_user.description %>
    <% else %>
      Please introduce yourself from <%= link_to "here", edit_user_registration_path, class: "badge badge-primary" %>
    <% end %>
  </div>
</div>